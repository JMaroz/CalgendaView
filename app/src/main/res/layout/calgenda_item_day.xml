<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:layout_height="56dp"
    tools:layout_width="56dp">

    <View
        android:id="@+id/item_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/circle_gray_outline" />

    <View
        android:id="@+id/item_events"
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:layout_below="@+id/item_day"
        android:layout_centerHorizontal="true"
        android:background="#d8d8d8" />

    <TextView
        android:id="@+id/item_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        tools:text="Gen."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        tools:text="21"
        tools:textColor="@color/white" />

    <TextView
        android:id="@+id/item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        tools:text="19"
        tools:visibility="visible" />

</RelativeLayout>